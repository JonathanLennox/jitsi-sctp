            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>3.1.0</version>

                <configuration>
                    <descriptors>
                        <!-- Assembly contents are defined in this file -->
                        <descriptor>javalibs.xml</descriptor>
                    </descriptors>
                </configuration>
                <executions>
                    <execution>
                        <!-- Build assembly in the Maven package phase -->
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
